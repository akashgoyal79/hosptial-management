<%-include("../partials/header")%>

<div class="container mt-5 p-5">
	<h1 class="text-center mb-5 pb-5 display-3">
		EDIT DOCTOR
	</h1>
	<form>
		<div class="form-row">
			<div class="form-group col-md-6">
				<label for="inputFname4">First Name</label>
				<input type="text" class="form-control" id="inputFname4" placeholder="First Name"                    	 	 	 	 name="doctor[fname]" value="<%=doctor.fname%>" disabled>
			</div>
			<div class="form-group col-md-6">
				<label for="inputLname4">Last Name</label>
				<input type="text" class="form-control" id="inputLname4" placeholder="Last Name" name="doctor[lname]"  	   	   	   	          value="<%=doctor.lname%>" disabled>
			</div>
		</div>
		<div class="form-group">
			<label for="inputEmail4">Email</label>
			<input type="email" class="form-control" id="inputEmail4" placeholder="Email" name="username" disabled   	 	 	        value="<%=doctor.username%>">
		</div>
		<div class="form-group">
			<label for="inputPassword4">Password</label>
			<input type="password" class="form-control" id="inputPassword4"  name="password" disabled>
		</div>
		<div class="form-row">
			<div class="form-group col-md-6">
				<label for="inputAge">Specialization</label>
				<input type="text" class="form-control" id="inputAge" placeholder="Specialization"      	   	           	   	   	    name="doctor[specialization]"  value="<%=doctor.specialization%>" disabled>
			</div>
			<div class="form-group col-md-6">
				<label for="inputGender">Gender</label>
				<select id="inputGender" class="form-control" required name="doctor[gender]" disabled>
					<option selected><%=doctor.gender%></option>  
					<option value="Male">Male</option>
					<option value="Female">Female</option>
					<option value="Others">Others</option>  
				</select>
			</div>
		</div>
		<div class="mt-4">
			<a href="/doctor/patients">Back</a>
		</div>
	</form>
</div>

<%-include("../partials/footer")%>