<%-include("../partials/header")%>
<div class="login-container mt-5 p-5 border">
	<h1 class="text-center mb-5 pb-5 display-3">
		ASK FOR A DOCTOR
	</h1>
	<form action="/request/doctor" method="POST">
		
	<div class="form-group">
			<label for="exampleInputEmail1">Email address</label>
			<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"              	     	 	 placeholder="Enter email" name="username">
			
 		</div>
  
  <div class="form-group">
    <label for="exampleInputPassword1">Problem</label>
	  <textarea class="form-control" id="exampleInputPassword1" placeholder="Write your problem or symptoms here in detail." name="problem" rows="4"></textarea>
  </div>
		
		
  <div class="form-check"></div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>
<%-include("../partials/footer")%>