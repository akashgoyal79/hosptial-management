<%-include("../partials/header")%>
<div class="login-container mt-5 p-5 border">
	<h1 class="display-4 pb-5 text-center">
		PATIENT LOGIN
	</h1>
	<form action="/patient/login" method="POST">
		<div class="form-group">
			<label for="exampleInputEmail1">Email address</label>
			<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"              	     	 	 placeholder="Enter email" name="username">
			<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
 		</div>
		<div class="form-group">
			<label for="exampleInputPassword1">Password</label>
			<input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password"    	             	 	  name="password">
		</div>
		<button type="submit" class="btn btn-primary">Submit</button>
	</form>
</div>

<%-include("../partials/footer")%>